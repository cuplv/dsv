name:                dsv
version:             0.1.0.0
synopsis:            Distributed store verifier
license:             BSD3
license-file:        LICENSE
author:              octalsrc
maintainer:          octal@octalsrc.org
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:     DSV
                     , DSV.Logic
                     , DSV.Contract
                     , DSV.Effect
                     , DSV.Effect.Bank
  build-depends:       base >=4.9 && <4.10
                     , z3
                     , containers
                     , mtl
                     , smtlib2
                     , smtlib2-pipe
                     , smtlib2-debug
                     , turtle
  hs-source-dirs:      src
  default-language:    Haskell2010
  extra-libraries:     z3

test-suite tests
  type:                exitcode-stdio-1.0
  main-is:             tests.hs
  hs-source-dirs:      tests
  default-language:    Haskell2010
  build-depends:       base
                     , dsv
                     , z3
                     , smtlib2
                     , smtlib2-pipe
                     , smtlib2-debug
                     , turtle
